{
  "name": "react-electron",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "cross-env": "^5.2.0",
    "electron": "^2.0.6",
    "lazy-img-react": "^1.0.0",
    "node-sass": "^4.9.2"
  },
  "scripts": {
    "build-css": "node-sass src/assets/scss -o src/assets/css",
    "watch-css": "npm run build-css && node-sass src/assets/scss -o src/assets/css --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "electron-build": "cross-env NODE_ENV=production electron ."
  }
}
